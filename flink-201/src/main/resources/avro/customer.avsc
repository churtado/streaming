{
     "type": "record",
     "namespace": "com.example",
     "name": "Customer",
     "version": "2",
     "fields": [
       { "name": "first_name", "type": "string", "default": "unknown", "doc": "First Name of Customer" },
       { "name": "last_name", "type": "string", "default": "unknown", "doc": "Last Name of Customer" },
       { "name": "age", "type": "int", "default": 0, "doc": "Age at the time of registration" },
       { "name": "height", "type": "float", "default": 0, "doc": "Height at the time of registration in cm" },
       { "name": "weight", "type": "float", "default": 0, "doc": "Weight at the time of registration in kg" },
       { "name": "phone_number", "type": ["null", "string"], "default": null, "doc": "optional phone number"},
       { "name": "email", "type": "string", "default": "missing@example.com", "doc": "email address"}
     ]
}